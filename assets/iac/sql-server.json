{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorPassword": {
            "metadata": {
                "description": "Password of the administrator user."
            },
            "type": "securestring"
        },
        "administratorUsername": {
            "defaultValue": "Eldert",
            "metadata": {
                "description": "Name of the administrator user."
            },
            "type": "string"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location where we want to deploy the resource."
            },
            "type": "string"
        },
        "sqlServerName": {
            "defaultValue": "[concat('sql-hybrid-multi-cloud-', uniqueString(resourceGroup().name))]",
            "metadata": {
                "description": "Name of the SQL Server."
            },
            "type": "string"
        },
        "syncAgentName": {
            "defaultValue": "sa-hybrid-multi-cloud-strategy",
            "metadata": {
                "description": "Name of the Sync Agent."
            },
            "type": "string"
        },
        "syncSqlServerName": {
            "defaultValue": "[concat('sql-hybrid-multi-cloud-', uniqueString(resourceGroup().name))]",
            "metadata": {
                "description": "Name of the Sync SQL Server."
            },
            "type": "string"
        },
        "tags": {
            "defaultValue": {
                "LastModifiedDate": "[utcNow()]",
                "Project": "Creating a hybrid and multi-cloud strategy using Azure API Management",
                "Purpose": "Session"
            },
            "type": "object"
        }
    },
    "variables": {
        "databaseHybridMultiCloudStrategyName": "db-hybrid-multi-cloud-strategy",
        "databaseSyncMetadataName": "db-sg-hybrid-multi-cloud-strategy-sync-metadata"
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2019-06-01-preview",
            "name": "[parameters('sqlServerName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "administratorLogin": "[parameters('administratorUsername')]",
                "administratorLoginPassword": "[parameters('administratorPassword')]"
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2019-06-01-preview",
            "name": "[concat(parameters('sqlServerName'), '/', variables('databaseHybridMultiCloudStrategyName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 5
            },
            "properties": {
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2019-06-01-preview",
            "name": "[concat(parameters('syncSqlServerName'), '/', variables('databaseSyncMetadataName'))]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 5
            },
            "kind": "v12.0,user",
            "properties": {
            }
        },
        {
            "type": "Microsoft.Sql/servers/syncAgents",
            "apiVersion": "2015-05-01-preview",
            "name": "[concat(parameters('sqlServerName'), '/', parameters('syncAgentName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('syncSqlServerName'), variables('databaseSyncMetadataName'))]"
            ],
            "properties": {
                "syncDatabaseId": "[resourceId('Microsoft.Sql/servers/databases', parameters('syncSqlServerName'), variables('databaseSyncMetadataName'))]"
            }
        }
    ]
}